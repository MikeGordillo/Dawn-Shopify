<div id="account_pane">
  <div class="grid__item account">
    <p class="customer-account-name">Hi, {{ customer.name | upcase }}</p>
    <div class="account-row">
      <div class="account-row-left">
        <h3 class="overview"><a href="/account" class="text-link">{{ 'customer.account.details' | t }}</a></h3>
        <p><a href="/account?view=orders" class="text-link">My orders</a></p>
        <p><a href="#swym-wishlist" class="text-link">My wishlist</a></p>
        <p><a href="{{ routes.account_addresses_url }}" class="text-link">{{ 'customer.account.view_addresses' | t }}</a></p>
        <p><a href="/pages/rewards" class="text-link">My rewards</a></p>
      </div>
      <div class="account-row-right">
        <span class="midaccount">
          <p><a href="/a/returns" class="text-link">My returns</a></p>
          <p><a href="https://tlfapparel.zendesk.com/hc/en-us" class="text-link">Need help?</a></p>
        </span>
        <a href="{{ routes.account_logout_url }}">
          {{ 'customer.log_out' | t }}
        </a>
      </div>
    </div>
  </div>
</div>